<ActorFrame><children>
<Layer File="@ThemeFile('marquee')"
		OnCommand="%function(self)
		self:x(SCREEN_CENTER_X)
		self:y(SCREEN_CENTER_Y)
		self:zoomto(SCREEN_WIDTH+3,SCREEN_HEIGHT)
		end"
		/>

		<Layer Font="_krungthep 20px" Text="ALPHA RECREATION - 0.030"
				InitCommand="x,SCREEN_CENTER_X+250;y,SCREEN_CENTER_Y+90"
				OnCommand="shadowlength,0;skewx,-0.25;zoom,0.5;zoomx,0.8;horizalign,right" />
</children></ActorFrame>